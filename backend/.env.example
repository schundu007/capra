# ==========================================
# Capra Backend Configuration
# ==========================================

# Environment
NODE_ENV=development

# Server
PORT=3001
HOST=0.0.0.0
CORS_ORIGINS=*

# ==========================================
# API Keys (Required)
# ==========================================

# Anthropic Claude API Key
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API Key
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# ==========================================
# AI Provider Configuration (Optional)
# ==========================================

# Default AI provider: claude or openai
DEFAULT_AI_PROVIDER=claude

# Claude model configuration
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096

# OpenAI model configuration
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096

# ==========================================
# Code Execution Configuration (Optional)
# ==========================================

# Execution timeout in milliseconds
EXECUTION_TIMEOUT_MS=10000

# Maximum retry attempts for missing packages
EXECUTION_MAX_RETRIES=3

# Path to Python interpreter
PYTHON_PATH=/usr/bin/python3

# Allow automatic package installation
ALLOW_PACKAGE_INSTALL=true

# ==========================================
# File Upload Configuration (Optional)
# ==========================================

# Maximum file size in MB
MAX_FILE_SIZE_MB=10

# ==========================================
# Scraping Configuration (Optional)
# ==========================================

# Request timeout in milliseconds
SCRAPING_TIMEOUT_MS=10000

# Maximum content length to extract
SCRAPING_MAX_CONTENT_LENGTH=8000

# ==========================================
# Logging Configuration (Optional)
# ==========================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log format: json or text
LOG_FORMAT=json

# Include timestamp in logs
LOG_TIMESTAMP=true

# ==========================================
# Rate Limiting Configuration (Optional)
# ==========================================

# Enable rate limiting
RATE_LIMIT_ENABLED=false

# Rate limit window in milliseconds
RATE_LIMIT_WINDOW_MS=60000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100
